@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-light py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold text-primary">Welcome to Praskavi</h1>
        <p class="lead">Your trusted partner in online consumer product distribution.</p>
        <a href="/Home/Contact" class="btn btn-primary btn-lg mt-3">Contact Us</a>
    </div>
</div>

<!-- About Us Section -->
<section class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold text-primary">About Praskavi</h2>
            <p>
                At Praskavi, we specialize in the efficient and reliable distribution of high-quality consumer products.
                Based in India, we connect manufacturers with retailers and customers, ensuring seamless supply chain management.
                With a focus on technology and innovation, we are redefining the standards of sales and distribution in the modern era.
            </p>
            <a href="/Home/Contact" class="btn btn-outline-primary mt-3">Learn More</a>
        </div>
        <div class="col-md-6">
            <img src="~/image.png" class="img-fluid rounded shadow" alt="About Us">
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="fw-bold text-center text-primary mb-4">Our Services</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold">Product Distribution</h4>
                        <p>We ensure timely and reliable delivery of a wide range of consumer products across India.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold">E-Commerce Integration</h4>
                        <p>Seamless integration with online platforms for faster delivery and order management.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold">Customer Support</h4>
                        <p>Dedicated support to address your queries and ensure satisfaction at every stage.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="container my-5">
    <h2 class="fw-bold text-center text-primary mb-4">Why Choose Us?</h2>
    <div class="row text-center">
        <div class="col-md-3">
            <i class="bi bi-box-seam display-4 text-primary"></i>
            <h5 class="mt-3 fw-bold">Reliable Delivery</h5>
            <p>We prioritize speed and accuracy in every delivery.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-globe display-4 text-primary"></i>
            <h5 class="mt-3 fw-bold">Nationwide Reach</h5>
            <p>We cover all major cities and remote locations across India.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-person-bounding-box display-4 text-primary"></i>
            <h5 class="mt-3 fw-bold">Expert Team</h5>
            <p>Our skilled professionals ensure smooth operations.</p>
        </div>
        <div class="col-md-3">
            <i class="bi bi-cash-coin display-4 text-primary"></i>
            <h5 class="mt-3 fw-bold">Affordable Rates</h5>
            <p>Competitive pricing without compromising on quality.</p>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="fw-bold text-center text-primary mb-4">What Our Clients Say</h2>
        <div class="row">
            <div class="col-md-4">
                <blockquote class="blockquote bg-white p-4 shadow rounded">
                    <p>"Praskavi has revolutionized our supply chain. Their service is unmatched!"</p>
                    <footer class="blockquote-footer">Rahul Sharma, Retailer</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote bg-white p-4 shadow rounded">
                    <p>"Thanks to Praskavi, our online orders are delivered faster than ever."</p>
                    <footer class="blockquote-footer">Anita Verma, E-commerce Manager</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote bg-white p-4 shadow rounded">
                    <p>"Professional and reliable. We trust Praskavi for all our distribution needs."</p>
                    <footer class="blockquote-footer">Vikas Jain, Manufacturer</footer>
                </blockquote>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary text-white text-center">
    <h2>Partner with Praskavi Today!</h2>
    <p>Let's take your business to the next level with our professional distribution services.</p>
    <a href="/Home/Contact" class="btn btn-light btn-lg">Get in Touch</a>
</section>
